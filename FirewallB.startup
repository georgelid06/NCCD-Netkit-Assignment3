ifconfig eth0 192.168.1.20/25
ifconfig eth1 192.168.1.128/25
route add default gw 192.168.1.1 eth0

iptables -P FORWARD DROP
iptables -A FORWARD -m state --state ESTABLISHED,RELATED -j ACCEPT
iptables -A FORWARD -m state --state INVALID -j DROP

#allowing employees to communicate with the the webserver
iptables -A FORWARD -p tcp --sport 443 --dport 443 -d 192.168.1.10 -j ACCEPT

#allow employees to communicate with dns server
iptables -A FORWARD -p tcp --sport 53 --dport 53 -d 192.168.1.11 -j ACCEPT

#allowing email communication
iptables -A FORWARD -p tcp --match multiport --sports 25,587 --match multiport --dports 993,995 -d 192.168.1.13 -j ACCEPT
iptables -A FORWARD -p tcp --match multiport --dports 25,587 --match multiport --sports 993,995 -d 192.168.1.13 -j ACCEPT

